# TLS Server Configuration
LISTEN_HOST=0.0.0.0
LISTEN_PORT=8000

# SSL/TLS Certificate Configuration
CERT_FILE=certs/service_center_cert.pem
KEY_FILE=certs/service_center_key.pem
CA_FILE=certs/ca_cert.pem

# MQTT Configuration
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
BASE_TOPIC=mioty

# Application Configuration
SENSOR_CONFIG_FILE=data/endpoints.json
STATUS_INTERVAL=300
DEDUPLICATION_DELAY=2.0

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false

# Auto-detach Configuration
AUTO_DETACH_ENABLED=true
AUTO_DETACH_TIMEOUT=259200
AUTO_DETACH_HOURS=72
AUTO_DETACH_WARNING_TIMEOUT=129600
AUTO_DETACH_WARNING_HOURS=36
AUTO_DETACH_CHECK_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bssci_service.log

# Security
SECRET_KEY=your-secret-key-here